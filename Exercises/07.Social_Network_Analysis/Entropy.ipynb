    "import math \n",
    "\n",
    "def entropy(p, n):\n",
    "    if p == 0 or n == 0:\n",
    "        return 0\n",
    "    a = p / (p + n)\n",
    "    b = n / (p + n)\n",
    "    return -a * math.log(a,2) - b*math.log(b,2)"
   ]
  },
